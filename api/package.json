{
  "name": "chat-api",
  "version": "1.0.0",
  "description": "Simple chat API",
  "main": "src/server.ts",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/server.ts",
    "test": "jest",
    "km:make": "knex --knexfile ./src/database/knexfile.js migrate:make",
    "km:latest": "knex --knexfile ./src/database/knexfile.js migrate:latest",
    "km:rollback": "knex --knexfile ./src/database/knexfile.js migrate:rollback",
    "km:recreate": "npm run knex:migrate:rollback && npm run knex:migrate:latest",
    "kbm:latest": "knex --knexfile ./dist/database/knexfile.js migrate:latest",
    "kbm:rollback": "knex --knexfile ./dist/database/knexfile.js migrate:rollback",
    "kbm:recreate": "npm run knex:migrate:rollback && npm run knex:migrate:latest"
  },
  "author": "Pablo Medeiros",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.5",
    "@types/socket.io": "2.1.11",
    "@types/sqlite3": "^3.1.7",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.3",
    "ts-node-dev": "^1.0.0-pre.52",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/knex": "^0.16.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "knex": "^0.95.4",
    "nested-knex": "^0.1.2",
    "socket.io": "2.3.0",
    "sqlite3": "^5.0.2"
  }
}
